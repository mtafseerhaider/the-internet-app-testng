<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LoginTestsNegative" verbose="1" parallel="tests" thread-count="4">

	<test name="Invalid Username - Chrome">
		<parameter name="username" value="incorrectUsername"></parameter>
		<parameter name="password" value="SuperSecretPassword!"></parameter>
		<parameter name="expectedMessage" value="Your username is invalid!"></parameter>
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="LoginTestsNegative">
			</class>
		</classes>
	</test>
	
	<test name="Invalid Username - Firefox">
		<parameter name="username" value="incorrectUsername"></parameter>
		<parameter name="password" value="SuperSecretPassword!"></parameter>
		<parameter name="expectedMessage" value="Your username is invalid!"></parameter>
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="LoginTestsNegative">
			</class>
		</classes>
	</test>
	
	<test name="Invalid Password - Chrome">
		<parameter name="username" value="tomsmith"></parameter>
		<parameter name="password" value="incorrectPassword"></parameter>
		<parameter name="expectedMessage" value="Your password is invalid!"></parameter>
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="LoginTestsNegative">
			</class>
		</classes>
	</test>
	
	<test name="Invalid Password - Firefox">
		<parameter name="username" value="tomsmith"></parameter>
		<parameter name="password" value="incorrectPassword"></parameter>
		<parameter name="expectedMessage" value="Your password is invalid!"></parameter>
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="LoginTestsNegative">
			</class>
		</classes>
	</test>

</suite>
